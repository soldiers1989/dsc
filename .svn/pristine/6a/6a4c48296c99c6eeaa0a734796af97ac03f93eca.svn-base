    public static List<AssetContractTask> getByVenusNo(
            String venusApplyNo) {

        String hql = " select act from AssetContractTask as act " +
                " where act.deleted = 0 and act.venusApplyNo = ?1 ";

        List<Object> params = Arrays.asList(venusApplyNo);

        return getRepository().createJpqlQuery(hql).setParameters(params).list();
    }

    public static AssetContractTask getByVenusNoAndType(
            String venusApplyNo,String fileType) {

        String hql = " select act from AssetContractTask as act " +
                " where act.deleted = 0 and act.venusApplyNo = ?1 and act.attachSubClass = ?2";

        List<Object> params = Arrays.asList(venusApplyNo, fileType);

        return getRepository().createJpqlQuery(hql).setParameters(params).singleResult();
    }

    public static List<AssetContractTask> getCurrentTask(Date localDateTime,int hours, int limit) {

        String hql = " select act from AssetContractTask as act "
                +" where act.deleted = 0 and act.isEnd = 0 "
                +" and act.compressFileState = 1 "
                +" and act.nextTime <= ?1 and act.createTime >= ?2 "
                +" order by act.createTime desc ";

        LocalDateTime minusHours = LocalDateTime.now().minusHours(hours);
        Instant instant = minusHours.atZone(ZoneId.systemDefault()).toInstant();

        ArrayList<Object> params = new ArrayList<Object>(2){{
            add(localDateTime);
            add(Date.from(instant));
        }};

        Page page = getQueryChannel().createJpqlQuery(hql)
                .setParameters(params)
                .setPage(0, limit).pagedList();
        return page.getData();
    }


    public static List<AssetContractTask> getContractTask(String venusApplyNo){
        String hql = " select act from AssetContractTask as act " +
                " where act.deleted = 0 and act.venusApplyNo = ?1" +
                " order by act.createTime desc ";
        List<Object> list = Collections.singletonList(venusApplyNo);
        return getRepository().createJpqlQuery(hql)
                .setParameters(list).list();
    }


