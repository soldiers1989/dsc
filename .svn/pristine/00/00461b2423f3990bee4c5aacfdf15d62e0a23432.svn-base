<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.yixin</groupId>
  <artifactId>dsc</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <packaging>war</packaging>

  <name>dsc</name>
  
  
  <!-- Inherit defaults from Spring Boot -->
  <parent>
    <groupId>org.springframework.boot</groupId>
    <artifactId>spring-boot-starter-parent</artifactId>
    <version>2.0.1.RELEASE</version>
  </parent>


  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    <common.service.version>0.1.3-SNAPSHOT</common.service.version>
	<common.utils.version>0.1.3-SNAPSHOT</common.utils.version>
	<shiro.version>1.2.4</shiro.version>
  </properties>


  <profiles>
    <profile>
      <id>dev</id>
      <activation>
          <activeByDefault>false</activeByDefault>
      </activation>
      <properties>
          <profiles.active>dev</profiles.active>
          <usc.version>1.0.1-SNAPSHOT</usc.version>
          <!--<db.url>jdbc:mysql://localhost:3306/test</db.url>-->
      </properties>
    </profile>
    <profile>
      <id>docker</id>
      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>
      <properties>
        <profiles.active>docker</profiles.active>
        <usc.version>1.0.1-SNAPSHOT</usc.version>
      </properties>
    </profile>
    <profile>
      <id>uat</id>
      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>
      <properties>
        <profiles.active>uat</profiles.active>
        <usc.version>1.0.1</usc.version>
      </properties>
    </profile>
    <profile>
      <id>prd</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <properties>
        <profiles.active>prd</profiles.active>
        <usc.version>1.0.2-SNAPSHOT</usc.version>
      </properties>
    </profile>
  </profiles>


  <!-- 依赖  -->
  <dependencies>
    <!--  spring  -->
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-web</artifactId>
      <exclusions>  
                <exclusion>  
                    <groupId>org.springframework.boot</groupId>  
                    <artifactId>spring-boot-starter-tomcat</artifactId>  
                </exclusion>  
       </exclusions>  
    </dependency>
    <dependency>
   <groupId>org.springframework.boot</groupId>
